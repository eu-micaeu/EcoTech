<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/entrar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoTech</title>
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
</head>
<body>

    <header>
        
        <img src="images/Logo.png" alt="Logo" width="150" height="150">

        <nav>
            <ul>
                <li><a href="/sobre">QUEM SOMOS</a></li>

                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/perfil">PERFIL</a> / 
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" style="color: red; font-size: 20px; background: none; border: none; cursor: pointer;">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}

                {{^estaLogado}}
                <li><a href="/entrar">ENTRAR</a></li>
                {{/estaLogado}}
            </ul>
        </nav>

    </header>

     <form action="/itens/registerItem" method="POST" enctype="multipart/form-data">

        <h2>Novo Anúncio</h2>

        <label for="nome_item">Nome: </label>
        <input id="nome_item" name="nome_item" type="text">

        <label for="imagem_item">Imagem do Item:</label>
        <input type="file" id="imagem_item" name="imagem_item" ><br>

        <label for="descricao_item">Descrição: </label>
        <textarea id="descricao_item" name="descricao_item" rows="4" cols="50"></textarea>

        <label for="preco_item">Preço: </label>
        <input id="preco_item" name="preco_item" type="text">

        <label for="estado_item">Estado:</label>
        <input id="estado_item" name="estado_item" type="text">

        <button type="submit">Enviar anúncio</button>
    
    </form>

     <% if (typeof alertMessage !== 'undefined' && alertMessage !== '') { %>
        
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        
            <%= alertMessage %>
        
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        
                <span aria-hidden="true">&times;</span>
        
            </button>
        
        </div>
    
    <% } %>
    
    

    <footer>
        
        <p> Todos os direitos reservados </p>

    </footer>

</body>

</html>
