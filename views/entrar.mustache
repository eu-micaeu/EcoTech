<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/entrar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoTech</title>
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
</head>
<body>

    <header>
        <img src="images/Logo.png" alt="Logo" width="150" height="150">
        <nav>
            <ul>
                <li><a href="/sobre">QUEM SOMOS</a></li>
                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/perfil">PERFIL</a> / 
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" style="color: red; font-size: 20px; background: none; border: none; cursor: pointer;">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}
                {{^estaLogado}}
                <li><a href="/">HOME</a></li>
                {{/estaLogado}}
            </ul>
        </nav>
    </header>

    <!-- Formulário de Login -->

    <form action="/usuario/loginUsuario" method="post">
        <h2>Entrar</h2>
        <label for="email_usuario">Email:</label>
        <input id="email_usuario" name="email_usuario" type="text">
        <label for="senha_usuario">Senha:</label>
        <input id="senha_usuario" name="senha_usuario" type="password">
        <a href="/registrar"> Não possui uma conta? Cadastre-se</a>
        <button type="submit">Entrar</button>

        <!-- Alternativa para login com Google -->

        <p>Ou pelo:</p>
        <img src="images/google.png" alt="Logo" width="50" height="50" id="google-login-btn">
    </form>

    <h1>Encontre um lugar melhor para o seu hardware.</h1>

    <script src="../js/entrar.js" defer type="module"></script>

</body>
</html>
