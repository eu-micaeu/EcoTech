<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/home.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
    <title>EcoTech</title>
</head>
<body>

    <header>
        
        <img src="images/Logo.png" alt="Logo" width="150" height="150">

        <nav>
            <ul>
                <li><a href="/sobre">QUEM SOMOS</a></li>

                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/perfil">PERFIL</a> / 
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" style="color: red; font-size: 20px; background: none; border: none; cursor: pointer;">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}

                {{^estaLogado}}
                <li><a href="/entrar">ENTRAR</a></li>
                {{/estaLogado}}
            </ul>
        </nav>

    </header>

    <div class="titulo">

        <img src="images/smile.png" alt="Logo" width=27 height=27>
    
        <h2>Produtos Recomendados pelo site</h2>
    
    </div>

    <div class="carrossel">

        {{#dataValuesArray}}

        <div class="item">
            <img id="base64Image" src="data:image/png;base64,{{imagem_item}}" alt="Imagem em Base64" width="150" height="150" onclick="window.location.href='descricao?id={{id_item}}'">
            <p>{{nome_item}}</p>
            <p><strong>R${{preco_item}}</strong></p>
        </div>

        {{/dataValuesArray}}

    </div>

    <div class="titulo">

        <img src="images/departamento.png" alt="Logo" width=42 height=42>
    
        <h2>Departamentos</h2>
    
    </div>

    <div class="carrossel">

        <div class="card" onclick="window.location.href='/departamento?id=1'">
            
            <img src="images/monitor.jpg" alt="Monitores" width="150" height="150">
            <p>Monitores</p>
            
        </div>

        <div class="card" onclick="window.location.href='/departamento?id=2'">

            <img src="images/fontes.jpg" alt="Fontes" width="150" height="150">
            <p>Fontes</p>

        </div>

        <div class="card">
            
            <img src="images/processador.jpg" alt="Processadores" width="150" height="150">
            <p>Processadores</p>
            
        </div>

        <div class="card">
            
            <img src="images/placadevideo.jpg" alt="Placas de Videos" width="150" height="150">
            <p>Placas de Vdeos</p>
            
        </div>

        <div class="card">
            
            <img src="images/memoriaram.jpg" alt="Memória RAM'S" width="150" height="150">
            <p>Memória RAM'S</p>
            
        </div>

    </div>

    <footer>
        
        <p> Todos os direitos reservados </p>

    </footer>

</body>

</html>
