<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/perfil.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoTech</title>
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
</head>
<body>

    <header>
        
        <img src="images/Logo.png" alt="Logo" width="150" height="150">

        <nav>
            <ul>
                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/">HOME</a> |
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" id="btSair">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}

                {{^estaLogado}}
                <li><a href="/entrar">ENTRAR</a></li>
                {{/estaLogado}}
            </ul>
        </nav>

    </header>

    {{#usuario}}

    <a href="/anunciar" id="botao-anunciar">Anunciar produto</a>

    <div class="perfil">

        <h2>Dados pessoais</h2>

        <div class="box">

            <label>Nome completo:</label>
            <input type="text" value="{{nome_usuario}}" disabled>

        </div>

        <div class="box">

            <label>Email:</label>
            <input type="text" value="{{email_usuario}}" disabled>

        </div>

        <div class="box">

            <label>Telefone:</label>
            <input type="text" value="{{telefone_usuario}}" disabled>

        </div>

    </div>

    <div class="enderecos">

        {{#enderecos}}

        <div class="endereco">

            <h2>Endereço</h2>

            <div class="box">

                <label>CEP:</label>
                <input type="text" value="{{cep_endereco}}" disabled>

            </div>

            <div class="box">

                <label>Logradouro:</label>
                <input type="text" value="{{logradouro_endereco}}" disabled>

            </div>

            <div class="box">

                <label>Número:</label>
                <input type="text" value="{{numero_endereco}}" disabled>

            </div>

            <div class="box">

                <label>Complemento:</label>
                <input type="text" value="{{complemento_endereco}}" disabled>

            </div>

            <div class="box">

                <label>Bairro:</label>
                <input type="text" value="{{bairro_endereco}}" disabled>

            </div>

        {{/enderecos}}

        </div>

    </div>

    <form action="/usuario/deletarUsuario" method="delete">

        <button type="submit" id="botaoDeletarConta"> DELETAR CONTA </button>
    
    </form>

    {{/usuario}}

    <footer>

        <div class="contato">
            <h3>Contato</h3>
            <p>Email: contato@ecotech.com</p>
            <p>Telefone: (11) 1234-5678</p>
            <p>Endereço: Rua Exemplo, 123, São Paulo, SP</p>
        </div>

        <div class="sobre">
            <img src="images/Logo.png" alt="Logo" width="70" height="70">
            <p>&copy; 2024 EcoTech. Todos os direitos reservados.</p>
            <a href="/sobre" target="_blank">QUEM SOMOS</a>
        </div>

        <div class="redes-sociais">
            <h3>Redes Sociais</h3>
            <a href="https://www.facebook.com/ecotech" target="_blank" style="margin: 10px 0px;">Facebook</a>
            <a href="https://www.twitter.com/ecotech" target="_blank" style="margin: 0 10px;">Twitter</a>
            <a href="https://www.instagram.com/ecotech" target="_blank" style="margin: 0 10px;">Instagram</a>
        </div>

    </footer>

</body>

</html>
