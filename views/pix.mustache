<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/comprar.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoTech</title>
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
</head>
<body>

    <header>
        
        <img src="images/Logo.png" alt="Logo" width="150" height="150">

        <nav>
            <ul>

                <li><a href="/">HOME</a></li>

                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/perfil">PERFIL</a> / 
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" style="color: red; font-size: 20px; background: none; border: none; cursor: pointer;">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}

                {{^estaLogado}}
                <li><a href="/entrar">ENTRAR</a></li>
                {{/estaLogado}}
            </ul>
        </nav>

    </header>

    {{#imgQrCode}}

        <h1>{{.}}</h1>

        <img src="{{.}}" alt="QR Code PIX">

    {{/imgQrCode}}

    <footer>

        <div class="contato">
            <h3>Contato</h3>
            <p>Email: contato@ecotech.com</p>
            <p>Telefone: (11) 1234-5678</p>
            <p>Endereço: Rua Exemplo, 123, São Paulo, SP</p>
        </div>

        <div class="sobre">
            <img src="images/Logo.png" alt="Logo" width="70" height="70">
            <p>&copy; 2024 EcoTech. Todos os direitos reservados.</p>
        </div>

        <div class="redes-sociais">
            <h3>Redes Sociais</h3>
            <a href="https://www.facebook.com/ecotech" target="_blank" style="margin: 10px 0px;">Facebook</a>
            <a href="https://www.twitter.com/ecotech" target="_blank" style="margin: 0 10px;">Twitter</a>
            <a href="https://www.instagram.com/ecotech" target="_blank" style="margin: 0 10px;">Instagram</a>
        </div>

    </footer>

    <script src="../js/pix.js"></script>

</body>

</html>
