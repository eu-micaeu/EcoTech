<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/produto.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EcoTech</title>
    <link rel="icon" href="images/Logo.png" type="image/x-icon">
</head>
<body>

    <header>
        
        <img src="images/Logo.png" alt="Logo" width="150" height="150">

        <nav>
        
            <ul>

                <li><a href="/">HOME</a></li>

                {{#estaLogado}}
                <li style="color: #12BD27; font-size: 20px;">
                    <a href="/perfil">PERFIL</a> | 
                    <form action="/usuario/logoutUsuario" method="POST" style="display:inline;">
                        <button type="submit" id="btSair">SAIR</button>
                    </form>
                </li>
                {{/estaLogado}}

                {{^estaLogado}}
                <li><a href="/entrar">ENTRAR</a></li>
                {{/estaLogado}}
            </ul>
        </nav>

    </header>
    
    <!-- Exibe as informações do item -->

    {{#item}}

    <div class="item">
        <img src="data:image/jpeg;base64,{{imagem_item}}" alt="Imagem do item" width=200 height=200>
        <div id=informacoesDoItem>
            <p id="nomeItem">{{nome_item}}</p>
            <p id="estadoItem">Condição: {{estado_item}} </p>
            <p id=precoItem>R${{preco_item}}</p>
            <button type="button" onclick="window.location.href='comprar?id={{id_item}}'" id="botaoComprar">COMPRAR AGORA</button>
        </div>
    </div>
    
    <hr>

    <div class="descricao">
        <h2>Descrição</h2>
        <p id="descricaoItem">{{descricao_item}}</p>
    </div>

    {{/item}}

    <!-- Rodapé da página -->

    <footer>

        <div class="contato">
            <h3>Contato</h3>
            <p>Email: contato@ecotech.com</p>
            <p>Telefone: (11) 1234-5678</p>
            <p>Endereço: Rua Exemplo, 123, São Paulo, SP</p>
        </div>

        <div class="sobre">
            <img src="images/Logo.png" alt="Logo" width="70" height="70">
            <p>&copy; 2024 EcoTech. Todos os direitos reservados.</p>
            <a href="/sobre" target="_blank">QUEM SOMOS</a>
        </div>

        <div class="redes-sociais">
            <h3>Redes Sociais</h3>
            <a href="https://www.facebook.com/ecotech" target="_blank" style="margin: 10px 0px;">Facebook</a>
            <a href="https://www.twitter.com/ecotech" target="_blank" style="margin: 0 10px;">Twitter</a>
            <a href="https://www.instagram.com/ecotech" target="_blank" style="margin: 0 10px;">Instagram</a>
        </div>

    </footer>

</body>

</html>
